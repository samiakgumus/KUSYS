		  <partial name="_ValidationScriptsPartial" />
    <script>

        toastr.options = {
            "closeButton": false,
            "debug": false,
            "newestOnTop": false,
            "progressBar": false,
            "positionClass": "toast-top-right",
            "preventDuplicates": false,
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "5000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        };


            function OnLoginSuccess(result) {
            if (result) {
                if (result.success) {



                    setTimeout(function () {
                        if (result.path != "" && result.path != null) {
                            parent.location = result.path;
                        }
                        else {
                            parent.location = '@Url.Action("Index", "Home")';
                        }
                    }, 1500);
                } else {
                    toastr.error(result.message);
                }



            }



        }

        function OnLoginBegin() {
      
        }

        function OnLoginComplete() {
			 
        }

    </script>

